<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_note_griditem_layout"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:layout_width="@dimen/gridview_item_width"
    android:layout_height="@dimen/gridview_item_height" >

    <!--Gionee <wangpan><2014-05-15> modify for CR01249465 begin-->
    <RelativeLayout
        android:id="@+id/home_note_griditem_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gridview_item_title_height"
        android:layout_alignParentTop="true" >

        <amigo.widget.AmigoTextView
            android:id="@+id/home_note_griditem_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:textSize="@dimen/small_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_note_griditem_content_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gridview_item_content_height"
        android:layout_below="@id/home_note_griditem_title_layout" >

        <amigo.widget.AmigoTextView
            android:id="@+id/home_note_griditem_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="6dp"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:textSize="@dimen/small_text_size" />

        <ImageView
            android:id="@+id/home_note_gridview_alarm_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="13dp"
            android:background="@drawable/gn_alarm_small" />
    </RelativeLayout>
    <!--Gionee <wangpan><2014-05-15> modify for CR01249465 end-->

</RelativeLayout>